<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>
    <bean id="auto" class="Autoturism">
        <property name="pret" value="20000"/>
        <property name="vitezaMaxima" value="280"/>
<!--        <property name="marca" value="Audi"/>-->
<!--        <property name="anul" value="2015"/>-->
    </bean>

    <bean id="tir1" class="Tir">
        <property name="pret" value="53000"/>
        <property name="vitezaMaxima" value="120"/>
        <property name="incarcaturaMaxima" value="30000"/>
    </bean>

    <bean id="tir2" class="Tir">
        <property name="pret" value="40000"/>
        <property name="vitezaMaxima" value="110"/>
        <property name="incarcaturaMaxima" value="25000"/>
    </bean>

    <bean id="moto1" class="Motocicleta">
        <constructor-arg value="5200"/>
        <constructor-arg value="300"/>
        <constructor-arg value="Kawasaki"/>
    </bean>

    <bean id="moto2" class="Motocicleta">
        <constructor-arg value="4500"/>
        <constructor-arg value="260"/>
        <constructor-arg value="BMW"/>
    </bean>
</beans>

